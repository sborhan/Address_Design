                if (document.getElementById(id).value.length == 0) {
                    address[idNoSpace] = " ";
                } else {
                    address[idNoSpace] = document.getElementById(id).value;
                }

                address["country"] = " ";
            }

            // fetch values from input
            //var Street1 = document.getElementById("Address Line").value
            //var ZipCode1 = $("#Zip Code").value();

            // build json object
            //var address = {
            //    AddressLine: Street1
            //    //ZipCode: ZipCode1,
            //};

            $.ajax({
                type: "PUT",
                url: "AddressForm",
                traditional: true,
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                data: JSON.stringify(address),
                success: function (data) {
                    var dvItems = $("#dvItems");
                    dvItems.empty();
                    $.each(data, function (index, value) {
                        $('<h3>').append(value).appendTo(dvItems);
                        $("div h3:last").append("&nbsp;");
                    });
                },
                error: function (data) { console.log(data) }
            });

        }
    }
</script>

